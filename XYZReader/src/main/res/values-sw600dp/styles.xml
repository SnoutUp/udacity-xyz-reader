<resources>
    <style name="ExpandButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/expand_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="elevation">@dimen/button_elevation</item>
    </style>

    <style name="ItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/photo_placeholder</item>

        <item name="layout_constraintDimensionRatio">"4:3"</item>
    </style>
</resources>
