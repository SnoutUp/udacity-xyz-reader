<resources>
    <style name="Theme.Bacon" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="Theme.Bacon.NoActionBar" parent="Theme.Bacon">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="ListItemTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
        <item name="android:paddingLeft">@dimen/list_item_margin</item>
        <item name="android:paddingRight">@dimen/list_item_margin</item>
        <item name="android:paddingTop">@dimen/list_item_margin</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
    </style>

    <style name="ListItemSubtitle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingLeft">@dimen/list_item_margin</item>
        <item name="android:paddingRight">@dimen/list_item_margin</item>
        <item name="android:paddingBottom">@dimen/list_item_margin</item>
        <item name="android:textColor">@color/theme_primary_dark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/list_subtitle_text_size</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ToolbarTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DetailsImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/detail_photo_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ItemImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/photo_placeholder</item>
        <item name="layout_constraintDimensionRatio">"4:3"</item>
    </style>

    <style name="ExpandButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/detail_padding_bottom</item>
        <item name="android:layout_marginLeft">@dimen/detail_inner_horiz_margin</item>
        <item name="android:layout_marginRight">@dimen/detail_inner_horiz_margin</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
